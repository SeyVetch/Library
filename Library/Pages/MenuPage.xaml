<Page x:Class="_13._01._22.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_13._01._22.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Label Content="Меню" HorizontalAlignment="Center" 
               Margin="0,33,0,0" VerticalAlignment="Top"
               FontSize="30" Grid.Column="1" Grid.ColumnSpan="2"
               Grid.Row="1"/>
        <Button x:Name="btnBookList" Grid.Column="1" Grid.Row="2"
                Content="Список книг" Margin="5, 5, 1, 1" Click="btnBookList_Click"/>
        <Button x:Name="btnUserList" Grid.Column="1" Grid.Row="3"
                Content="Список пользователей" Margin="5, 1, 1, 5" Click="btnUserList_Click"/>
        <Button x:Name="btnLendBook" Grid.Column="2" Grid.Row="2"
                Content="Выдача и сбор книг" Margin="1, 5, 5, 1" Click="btnLendBook_Click"/>
        <Button x:Name="btnAddBook" Grid.Column="2" Grid.Row="3"
                Content="Добавить книгу" Margin="1, 1, 5, 5" Click="btnAddBook_Click"/>
        <Button x:Name="btnExit" Grid.Column="0" Grid.Row="0"
                Content="Выйти" Margin="5, 5, 5, 5" Click="btnExit_Click"/>

    </Grid>
</Page>
