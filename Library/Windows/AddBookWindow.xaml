<Window x:Class="Library.Windows.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Добавить книгу" HorizontalAlignment="Center" 
               VerticalAlignment="Top"
               FontSize="30"
               Grid.ColumnSpan="2"/>
        
        <TextBlock Text="Название"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="1"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Автор"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="2"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Секция"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="3"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Издатель"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="4"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Дата выдачи"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="5"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Кол-во страниц"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="6"
                   Margin="0 0 10 0"/>
        <TextBlock Text="Цена"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   FontSize="16"
                   Grid.Row="7"
                   Margin="0 0 10 0"/>
        <!-- Вторая колонка -->
        <TextBox x:Name="txtName"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"
                 MaxLength="50"/>

        <ComboBox x:Name="cmbAuthor"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"
                 Visibility="Hidden"/>

        <ComboBox x:Name="cmbSection"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>

        <ComboBox x:Name="cmbPublisher"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="4"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"/>

        <TextBox x:Name="txtDateRelease"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"
                 MaxLength="100"/>

        <TextBox x:Name="txtQtyPages"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="6"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"
                  MaxLength="100"/>
        
        <TextBox x:Name="txtPrice"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 FontSize="16"
                 Grid.Row="7"
                 Grid.Column="1"
                 Margin="10 0 0 0"
                 Width="250"
                 Height="25"
                  MaxLength="100"/>
        
        <Button  x:Name="btAdd" 
                 Content="Добавить"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontSize="16"
                 Grid.Row="9"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="10 0 0 0"
                 Width="150"
                 Height="40"
                 Click="btAdd_Click"/>
    </Grid>
</Window>
