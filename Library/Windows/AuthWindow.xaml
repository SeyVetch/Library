<Window x:Class="_13._01._22.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13._01._22.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="360">
    <Grid>
        <Label Content="Authorization" HorizontalAlignment="Center" 
               Margin="0,33,0,0" VerticalAlignment="Top"
               FontSize="30"/>

        <StackPanel Margin="0, 150, 0, 0">
            <TextBlock Text="Login" Margin="5"/>
            <TextBox x:Name="LogBox" Margin="5"/>
            <TextBlock Text="Password" Margin="5"/>
            <TextBox x:Name="PasBox" Margin="5"/>
            <Button x:Name="LogBtn" Content="Log in" Margin="5" Click="LogBtn_Click"/>
        </StackPanel>

    </Grid>
</Window>
